<div class="welcome-message">Welcome {{username}}</div>

<div class="project-detail-field">
  <div class="project-detail-name">You are seeing the detail of the project {{project.project_name}}</div>
  <div class="project-status-field">
    
    {{#if costEstimate}}
      <div class="project-status project-status-active">Cost Estimate</div>
      <div class="project-status">Started</div>
      <div class="project-status">Interview</div>
      <div class="project-status">Development</div>
      <div class="project-status">Delivered</div>
    {{/if}}

    {{#if started}}
      <div class="project-status">Cost Estimate</div>
      <div class="project-status project-status-active">Started</div>
      <div class="project-status">Interview</div>
      <div class="project-status">Development</div>
      <div class="project-status">Delivered</div>
    {{/if}}

    {{#if interview}}
      <div class="project-status">Cost Estimate</div>
      <div class="project-status">Started</div>
      <div class="project-status project-status-active">Interview</div>
      <div class="project-status">Development</div>
      <div class="project-status">Delivered</div>
    {{/if}}

    {{#if development}}
      <div class="project-status">Cost Estimate</div>
      <div class="project-status">Started</div>
      <div class="project-status">Interview</div>
      <div class="project-status project-status-active">Development</div>
      <div class="project-status">Delivered</div>
    {{/if}}

    {{#if delivered}}
      <div class="project-status">Cost Estimate</div>
      <div class="project-status">Started</div>
      <div class="project-status">Interview</div>
      <div class="project-status">Development</div>
      <div class="project-status project-status-active">Delivered</div>
    {{/if}}
 
  </div>
  <div class="project-details">
    <ul class="project-details-flex-outer">
      <li>
        <p class="label">Project description</p>
        <p class="field">{{project.project_description}}</p>
      </li>
      <!--
      <li>
        <p class="label">Project status</p>
        <p class="field">{{project.status}}</p>
      </li>
      -->
      {{#if project.start_date }}
        <li>
          <p class="label">Start date</p>
          <p class="field">{{project.start_date}}</p>
        </li>
      {{/if}}
      {{#if costEstimate }}
        <li>
          <p class="label">Start date</p>
          <p class="field">Estimate in progress</p>
        </li>
      {{/if}}
      {{#if project.end_date }}
        <li>
          <p class="label">End date</p>
          <p class="field">{{project.end_date}}</p>
        </li>
      {{/if}}    
      {{#if project.cost_estimate}}
        <li>
          <p class="label">Cost estimate</p>
          <p class="field">{{project.cost_estimate}}</p>
        </li>
      {{/if}}

      {{#if project.comments}}
        {{#each project.comments}}
          <li>
            <p class="label">Your comments on {{created_at2}}</p>
            <p class="field">{{content}}</p>
          </li>
          <li>
            <form action="/youraccount/comments/{{_id}}/delete" method="POST"> 
              <button type="submit">Delete</button>
            </form>
          </li>
        {{/each}}
      {{/if}}  
    </ul>
  </div>

  <div class="comment-form-field">
    <form action="/youraccount/{{project._id}}" method="POST">
      <ul class="comment-flex-outer">
        <li>
          <label for="comments">Comments</label>
          <textarea name="comments"></textarea>
        </li>
        <li>
          <button>Submit</button>
        </li>       
      </ul>
    </form>
  </div>

  <div style="text-decoration: underline;"><a href="/youraccount">Go back to your list of projects</a></div>
</div>

